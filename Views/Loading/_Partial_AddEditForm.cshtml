@model ResponseModel<Loading>

@{
	Layout = null;
}


<div class="container-fluid">
<div class="row">
    <div class="col-12">
<div class="card card-primary card-outline">
    <div class="card-header">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h5 class="mb-0"></i> Product Details</h5>
            </div>          
        </div>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table_Common_SrNo">
                <thead>
                    <tr>
                        <th style="width:5%">#</th>
                        <th style="width:30%">Product Name</th>
                        <th style="width:20%">Package Type</th>
                        <th style="width:20%">SKU Size Name</th>
                        <th style="width:15%">Quantity</th>
                        @* <th style="width:10%">Action</th> *@
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ObjList != null && Model.ObjList.Count() > 0)
                    {
                        
                        foreach (var item in Model.ObjList.OrderByDescending(x => x.CreatedDate?.Ticks))
                        {
                            <tr>
                                <td></td>
                                <td>@item.Product_Name</td>
                                <td>@item.PackageType_Name</td>
                                <td>@item.SKUSize_Name</td>
                                <td>@item.Qty</td>
                                @* Example for action column
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-info btn-sm" 
                                                onclick="fnLoadParialView('divformSave', '@Url.Action("Partial_AddEditForm", "Orders")?Id=@item.Id');">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                    </div>
                                </td> *@
                            </tr>
                           
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-muted">No records found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>
</div>
</div>



