@model ResponseModel<City>

@{
    Layout = null;
}

<div class="col-md-12">
    <div class="card card-info">

        <div class="card-header">
            <h3 class="card-title">@(Model.Obj != null && Model.Obj.Id > 0 ? "Edit" : "Create") City</h3>
            <input type="text" class="form-control d-none" id="Id" name="Id" value="@(Model.Obj != null && Model.Obj.Id > 0 ? Model.Obj.Id.ToString() : "")">
            <input type="text" class="form-control d-none" id="StateId" name="StateId" value="@(Model.Obj != null && Model.Obj.StateId > 0 ? Model.Obj.StateId.ToString() : "")">
            <input type="text" class="form-control d-none" id="CountryId" name="CountryId" value="@(Model.Obj != null && Model.Obj.CountryId > 0 ? Model.Obj.CountryId.ToString() : "")">
            <input type="text" class="form-control d-none" id="DistrictId" name="DistrictId" value="@(Model.Obj != null && Model.Obj.DistrictId > 0 ? Model.Obj.DistrictId.ToString() : "")">
            <input type="text" class="form-control d-none" id="TalukaId" name="TalukaId" value="@(Model.Obj != null && Model.Obj.TalukaId > 0 ? Model.Obj.TalukaId.ToString() : "")">
        </div>


        <div class="card-body">
            <div class="row no-gutters">
                <div class="col-12">
                    <div class="form-group row">
                        <label for="Name" class="col-sm-2 col-form-label text-right">City Name</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control form-control-sm" id="Name" name="Name" value="@Model.Obj.Name"
                                   data-required data-msg="The City Name field is required." placeholder="City" autocomplete="off">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer">
            <div class="row no-gutters">
                <div class="col-sm-1">&nbsp;</div>
                <div class="col-sm-6 text-left">
                    <button type="submit" class="btn btn-success btnSubmit">Save</button>
                    <button type="button" class="btn btn-danger" onclick="fnCloseParialView('divformSave', '#table_Common');">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>
}
