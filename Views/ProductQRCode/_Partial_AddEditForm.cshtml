@model ResponseModel<ProductQrCode>

@{
	Layout = null;
}

<form id="formSave" action="@Url.Action("Save","ProductQRCode")" method="post" class="w-100">
	<div class="card card-info">

		<div class="card-header">
			<h3 class="card-title">Generate Product QR Code(s)</h3>
		</div>

		<div class="card-body">
			<div class="row no-gutters">
				<div class="col-12">
					<div class="form-group row">
						<label for="ProductId" class="col-sm-2 col-form-label text-right">Select Product</label>
						<div class="col-sm-4">
							<select id="ProductId" name="ProductId" class="form-control form-control-sm select2 w-100">
								<option value="">-- Select --</option>
								@if (Model.SelectListItems != null)
								{
									foreach (var item in Model.SelectListItems)
									{
										<option value="@item.Value">@item.Text</option>
									}
								}
							</select>
						</div>
					</div>

					<div class="form-group row">
						<label for="NoOfQRCode" class="col-sm-2 col-form-label text-right">No. of QR Code</label>
						<div class="col-sm-4">
							<input type="text" class="form-control form-control-sm isNumberKey" id="NoOfQRCode" name="NoOfQRCode" autocomplete="off" />
						</div>
					</div>

					<div class="form-group row">
						<label for="MinPointRange" class="col-sm-2 col-form-label text-right">Point Range</label>
						<div class="col-sm-2">
							<div class="input-group">
								<div class="input-group-prepend">
									<span class="input-group-text input-group-text-sm">Min</span>
								</div>
								<input type="text" class="form-control form-control-sm isNumberKey" id="MinPointRange" name="MinPointRange" autocomplete="off" />
							</div>
						</div>
						<div class="col-sm-2">
							<div class="input-group">
								<div class="input-group-prepend">
									<span class="input-group-text input-group-text-sm">Max</span>
								</div>
								<input type="text" class="form-control form-control-sm isNumberKey" id="MaxPointRange" name="MaxPointRange" autocomplete="off" />
							</div>
						</div>
					</div>

				</div>
			</div>
		</div>

		<div class="card-footer">
			<div class="row no-gutters">
				<div class="col-sm-1">&nbsp;</div>
				<div class="col-sm-6 text-left">
					<button type="button" class="btn btn-success btnSubmit">Save</button>
					<button type="button" class="btn btn-danger" onclick="fnCloseParialView('divformSave', '#dataTable_ProductQRCode');">Cancel</button>
				</div>
			</div>
		</div>
	</div>

</form>
