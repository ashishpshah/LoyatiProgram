@model ResponseModel<Product>

@{
	Layout = null;
}

<div class="col-md-12">
	<div class="card card-primary card-outline">

		<div class="card-header">
			<h3 class="card-title">@(Model.Obj != null && Model.Obj.Id > 0 ? "Edit" : "Create") Product</h3>
			<input type="text" class="form-control d-none" id="Id" name="Id" value="@(Model.Obj != null && Model.Obj.Id > 0 ? Model.Obj.Id.ToString() : "")">
			
		</div>

		<div class="card-body">
			<div class="row no-gutters">
				<div class="col-12">
					<div class="form-group row">
						<label for="Obj.ProductName" class="col-sm-2 col-form-label text-right">Product ID<span style="color:red">*</span></label>
						<div class="col-sm-4">
							<input type="text" class="form-control form-control-sm" id="Product_ID" name="Product_ID" value="@Model.Obj.Product_ID" placeholder="Product ID" autocomplete="off">
						</div>
						<label for="Obj.Password" class="col-sm-2 col-form-label text-right">Name</label>
						<div class="col-sm-4">							
								<input type="text" class="form-control form-control-sm" id="Name" name="Name" placeholder="Name" autocomplete="off" value="@Model.Obj.Name">
						</div>
					</div>
					<div class="form-group row">
						<label class="form-control-label col-sm-2" style="line-height: 2.5;">Unit Of Measurement</label>
						<div class="col-sm-4">
							<select class="form-control show-tick select2" id="UOM" name="UOM">
								<option value="0">-- Select --</option>
								@if (Model.SelectListItems != null && Model.SelectListItems.Count > 0)
								{
									foreach (SelectListItem_Custom item in Model.SelectListItems.Where(x => x.Group == "UOM"))
									{
										if (item.Value.ToString() == Model.Obj.UOM.ToString())
										{
											<option value="@item.Value" selected>@item.Text</option>
										}
										else
										{
											<option value="@item.Value">@item.Text</option>
										}
									}
								}
							</select>

						</div>
						<label class="form-control-label col-sm-2" style="line-height: 2.5;">Package Type</label>
						<div class="col-sm-4">
							<select class="form-control show-tick select2" id="PackageType_ID" name="PackageType_ID">
								<option value="0">-- Select --</option>
								@if (Model.SelectListItems != null && Model.SelectListItems.Count > 0)
								{
									foreach (SelectListItem_Custom item in Model.SelectListItems.Where(x => x.Group == "PackageType"))
									{
										if (item.Value.ToString() == Model.Obj.PackageType_ID.ToString())
										{
											<option value="@item.Value" selected>@item.Text</option>
										}
										else
										{
											<option value="@item.Value">@item.Text</option>
										}
									}
								}
							</select>

						</div>
					
					</div>
					<div class="form-group row">
						<label class="form-control-label col-sm-2" style="line-height: 2.5;">SKUSize</label>
						<div class="col-sm-4">
							<select class="form-control show-tick select2" id="SKUSize_ID" name="SKUSize_ID">
								<option value="0">-- Select --</option>
								@if (Model.SelectListItems != null && Model.SelectListItems.Count > 0)
								{
									foreach (SelectListItem_Custom item in Model.SelectListItems.Where(x => x.Group == "SKUSize"))
									{
										if (item.Value.ToString() == Model.Obj.SKUSize_ID.ToString())
										{
											<option value="@item.Value" selected>@item.Text</option>
										}
										else
										{
											<option value="@item.Value">@item.Text</option>
										}
									}
								}
							</select>

						</div>		
						<label for="Obj.SKUSizeName" class="col-sm-2 col-form-label text-right">MRP</label>
						<div class="col-sm-4">
							<input type="text" class="form-control form-control-sm isNumberKey_Decimal " id="MRP" name="MRP" value="@Model.Obj.MRP" placeholder="MRP" autocomplete="off" maxlength="12">
						</div>

					</div>
				</div>
				
			</div>
			
		</div>

		<div class="card-footer">
			<div class="row no-gutters">
				<div class="col-sm-1">&nbsp;</div>
				<div class="col-sm-12 text-center">
					<button type="submit" class="btn btn-success btnSubmit">Save</button>
					<button type="button" class="btn btn-danger" onclick="fnCloseParialView('divformSave','#table_Common_SrNo')">Cancel</button>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script type="text/javascript">
		$(document).ready(function () {

		});
	</script>
}

