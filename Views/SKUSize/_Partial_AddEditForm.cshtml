@model ResponseModel<SKUSize>

@{
	Layout = null;
}

<div class="col-md-12">
	<div class="card card-primary card-outline">

		<div class="card-header">
			<h3 class="card-title">@(Model.Obj != null && Model.Obj.Id > 0 ? "Edit" : "Create") SKUSize</h3>
			<input type="text" class="form-control d-none" id="Id" name="Id" value="@(Model.Obj != null && Model.Obj.Id > 0 ? Model.Obj.Id.ToString() : "")">
			
		</div>

		<div class="card-body">
			<div class="row no-gutters">
				<div class="col-12">
					<div class="form-group row">
						<label for="Obj.SKUSizeName" class="col-sm-2 col-form-label text-right">Value<span style="color:red">*</span></label>
						<div class="col-sm-4">
							<input type="text" class="form-control form-control-sm isNumberKey_Decimal " id="Value" name="Value" value="@Model.Obj.Value" placeholder="Value" autocomplete="off" maxlength="12">
						</div>
						<label for="Obj.Password" class="col-sm-2 col-form-label text-right">Unit<span style="color:red">*</span></label>
						<div class="col-sm-4">
							<select class="form-control show-tick select2" id="Unit" name="Unit">
								<option value="0">-- Select --</option>
								@if (Model.SelectListItems != null && Model.SelectListItems.Count > 0)
								{
									foreach (SelectListItem_Custom item in Model.SelectListItems.Where(x => x.Group == "UNIT"))
									{
										if (item.Value.ToString() == Model.Obj.Unit.ToString())
										{
											<option value="@item.Value" selected>@item.Text</option>
										}
										else
										{
											<option value="@item.Value">@item.Text</option>
										}
									}
								}
							</select>
						</div>
					</div>
					<div class="form-group row">
						<label class="form-control-label col-sm-2" style="line-height: 2.5;">Description</label>
						<div class="col-sm-10">
							<textarea class="form-control form-control-sm" rows="4" name="Description" id="Description" value="@Model.Obj.Description">@Model.Obj.Description</textarea>

						</div>
					
					</div>

				</div>
				
			</div>
			
		</div>

		<div class="card-footer">
			<div class="row no-gutters">
				<div class="col-sm-1">&nbsp;</div>
				<div class="col-sm-12 text-center">
					<button type="submit" class="btn btn-success btnSubmit">Save</button>
					<button type="button" class="btn btn-danger" onclick="fnCloseParialView('divformSave','#table_Common_SrNo')">Cancel</button>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script type="text/javascript">
		$(document).ready(function () {

		});
	</script>
}

