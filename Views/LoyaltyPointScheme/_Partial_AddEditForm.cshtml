@model ResponseModel<LoyaltyPointScheme>

@{
	Layout = null;
}

<div class="col-md-12">
	<div class="card card-primary card-outline">

		<div class="card-header">
			<h3 class="card-title">@(Model.Obj != null && Model.Obj.Id > 0 ? "Edit" : "Create") LoyaltyPointScheme</h3>
			<input type="text" class="form-control d-none" id="Id" name="Id" value="@(Model.Obj != null && Model.Obj.Id > 0 ? Model.Obj.Id.ToString() : "")">
			
		</div>

		<div class="card-body">
			<div class="row no-gutters">
				<div class="col-12">
					<div class="form-group row">
						<label for="Obj.LoyaltyPointSchemeName" class="col-sm-2 col-form-label text-right" >Product <span style="color:red">*</span></label>
						<div class="col-sm-4">
							<select class="form-control show-tick select2" id="ProductID" name="ProductID" onchange="fnChangeProductDetail(this, 'PACKTYPE', '#PackageType_ID')">
								<option value="0">-- Select --</option>
								@if (Model.SelectListItems != null && Model.SelectListItems.Count > 0)
								{
									foreach (SelectListItem_Custom item in Model.SelectListItems.Where(x => x.Group == "Product"))
									{
										if (item.Value.ToUpper() == Model.Obj.ProductID.ToString())
										{
											<option value="@item.Value" selected>@item.Text</option>
										}
										else
										{
											<option value="@item.Value">@item.Text</option>
										}
									}
								}
							</select>
						</div>
						<label for="Obj.LoyaltyPointSchemeName" class="col-sm-2 col-form-label text-right" >Package Type <span style="color:red">*</span></label>
						<div class="col-sm-4">
							<select class="form-control show-tick select2" id="PackageType_ID" name="PackageType_ID" onchange="fnChangeProductDetail(this, 'SKUSIZE', '#SKUSize_ID')">
								<option value="0">-- Select --</option>
								@if (Model.SelectListItems != null && Model.SelectListItems.Count > 0)
								{
									foreach (SelectListItem_Custom item in Model.SelectListItems.Where(x => x.Group == "PackageType"))
									{
										if (item.Value.ToUpper() == Model.Obj.PackageType_ID.ToString())
										{
											<option value="@item.Value" selected>@item.Text</option>
										}
										else
										{
											<option value="@item.Value">@item.Text</option>
										}
									}
								}
							</select>
						</div>					
					</div>


					<div class="form-group row">
						<label for="Obj.LoyaltyPointSchemeName" class="col-sm-2 col-form-label text-right">SKU Size <span style="color:red">*</span></label>
						<div class="col-sm-4">
							<select class="form-control show-tick select2" id="SKUSize_ID" name="SKUSize_ID">
								<option value="0">-- Select --</option>
								@if (Model.SelectListItems != null && Model.SelectListItems.Count > 0)
								{
									foreach (SelectListItem_Custom item in Model.SelectListItems.Where(x => x.Group == "SKUSize"))
									{
										if (item.Value.ToUpper() == Model.Obj.SKUSize_ID.ToString())
										{
											<option value="@item.Value" selected>@item.Text</option>
										}
										else
										{
											<option value="@item.Value">@item.Text</option>
										}
									}
								}
							</select>
						</div>						
						<label for="Obj.Password" class="col-sm-2 col-form-label text-right">Min Purchase Quantity</label>
						<div class="col-sm-4">
							<input type="text" class="form-control form-control-sm isNumberKey" id="MinPurchaseQty" name="MinPurchaseQty" placeholder="Min Purchase Qty" autocomplete="off" value="@Model.Obj.MinPurchaseQty">
						</div>
					</div>
					<div class="form-group row">
						<label for="Obj.Password" class="col-sm-2 col-form-label text-right">Max Purchase Quantity</label>
						<div class="col-sm-4">
							<input type="text" class="form-control form-control-sm isNumberKey" id="MaxPurchaseQty" name="MaxPurchaseQty" placeholder="Max Purchase Qty" autocomplete="off" value="@Model.Obj.MaxPurchaseQty">
						</div>
						<label for="Obj.Password" class="col-sm-2 col-form-label text-right">Loyalty Points</label>
						<div class="col-sm-4">
							<input type="text" class="form-control form-control-sm isNumberKey" id="LoyaltyPoints" name="LoyaltyPoints" placeholder="Loyalty Points" autocomplete="off" value="@Model.Obj.LoyaltyPoints">
						</div>					
					</div>
					<div class="form-group row">
						<label for="Obj.Password" class="col-sm-2 col-form-label text-right">Effective Start Date<span style="color:red">*</span></label>
						<div class="col-sm-4">
							<input type="date"
								   class="form-control form-control-sm"
								   id="EffectiveStartDate"
								   name="EffectiveStartDate"
								   placeholder="Effective Start Date"
								   autocomplete="off"
								   value="@(Model.Obj.EffectiveStartDate.HasValue
							 		   ? Model.Obj.EffectiveStartDate.Value.ToString("yyyy-MM-dd")
                  		   : string.Empty)">
						</div>
						<label for="Obj.Password" class="col-sm-2 col-form-label text-right">Effective End Date</label>
						<div class="col-sm-4">
							<input type="date"
								   class="form-control form-control-sm"
								   id="EffectiveEndDate"
								   name="EffectiveEndDate"
								   placeholder="Effective End Date"
								   autocomplete="off"
								   value="@(Model.Obj.EffectiveEndDate.HasValue
				  		   ? Model.Obj.EffectiveEndDate.Value.ToString("yyyy-MM-dd")
                  		   : string.Empty)">
						</div>

					</div>
				</div>
				
			</div>
			
		</div>

		<div class="card-footer">
			<div class="row no-gutters">
				<div class="col-sm-1">&nbsp;</div>
				<div class="col-sm-12 text-center">
					<button type="submit" class="btn btn-success btnSubmit">Save</button>
					<button type="button" class="btn btn-danger" onclick="fnCloseParialView('divformSave','#table_Common_SrNo')">Cancel</button>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script type="text/javascript">
		$(document).ready(function () {

		});
	</script>
}

